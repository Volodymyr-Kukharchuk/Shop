<h1>All Cars</h1>
<h3>@Model.CurrCategory</h3>
<div class="row mt-5 mb-2"></div>
@{
    foreach (var car in Model.AllCars)
    {
        <div class="col-lg-4">
            <img class="img-thumbnail" src="@car.Image" alt="@car.Name" />
            <h2>@car.Name</h2>
            <p>@car.ShortDesc</p>
            <p> Price : @car.Price.ToString("c")</p>
            <p><a class="bnt btn-warning" href="#">More Detail</a> </p>
        </div>
    }
}

